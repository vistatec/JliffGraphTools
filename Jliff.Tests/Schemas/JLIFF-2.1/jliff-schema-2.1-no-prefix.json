          "minItems": 1
        }
      },
      "additionalProperties": false
    },

    "metaGroup": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "appliesTo": { "type": "string", "enum": [ "source", "target", "ignorable" ] },
        "category": { "type": "string" },
        "meta": { 
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "value": { "type": "string" }
                },
                "additionalProperties": false
              },
              { "$ref": "#/definitions/metaGroup" }
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [ "meta" ]
    },

    "resourceData": {
      "description": "The resourceData module: provides a mechanism for referencing external resource data that MAY need to be modified or used as contextual reference during translation",
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "resourceItemRefs": {
          "type": "array",
          "items": { "$ref": "#/definitions/resourceItemRef" },
          "minItems": 1
        },
        "resourceItems": {
          "type": "array",
          "items": { "$ref": "#/definitions/resourceItem" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },

    "resourceItemRef": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "ref": { "$ref": "#/definitions/NMTOKEN" }
      },
      "additionalProperties": false,
      "required": [ "ref" ]
    },

    "resourceItem": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "mimeType": { "type": "string" },
        "context": { "type": "string", "enum": [ "yes", "no" ], "default": "yes" },
        "source": {
          "type": "object",
          "properties": {
            "href": { "type": "string" },
            "lang": { "$ref": "#/definitions/language" }
          },
          "additionalProperties": true
        },
        "target": {
          "type": "object",
          "properties": {
            "href": { "type": "string" },
            "lang": { "$ref": "#/definitions/language" }
          },
          "additionalProperties": true
        },
        "references": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "href": { "type": "string" },
              "lang": { "$ref": "#/definitions/language" }
            },
            "additionalProperties": true,
            "required": [ "href" ]
          }
        }
      },
      "additionalProperties": true
    },

    "changeTrack": {
      "description": "The changeTrack module is used to store revision information",
      "type": "object",
      "properties": {
        "revisions": {
          "type": "array",
          "items": { "$ref": "#/definitions/changeTrackRevisions" },
          "minItems": 1
        },
        "annotatorsRef": { "$ref": "#/definitions/annotatorsRef" }
      },
      "additionalProperties": false,
      "required": [ "revisions" ]
    },

    "changeTrackRevisions": {
      "type": "object",
      "properties": {
        "appliesTo": { "$ref": "#/definitions/NMTOKEN" },
        "ref": { "$ref": "#/definitions/NMTOKEN" },
        "currentVersion": { "$ref": "#/definitions/NMTOKEN" },
        "items": {
          "type": "array",
          "items": { "$ref": "#/definitions/changeTrackRevisionItem" },
          "minItems": 1
        },
        "annotatorsRef": { "$ref": "#/definitions/annotatorsRef" }
      },
      "additionalProperties": true,
      "required": [ "appliesTo" ]
    },

    "changeTrackRevisionItem": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "dateTime": { "type": "string" },
