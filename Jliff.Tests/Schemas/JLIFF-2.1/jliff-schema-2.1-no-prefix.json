    },

    "element-sc": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": [ "sc" ] },
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "fs": { "$ref": "#/definitions/formatStyle" },
        "subFs": { "$ref": "#/definitions/subFormatStyle" },
        "profileData": { "$ref": "#/definitions/profileData" },
        "profileStorageRestriction": { "$ref": "#/definitions/profileStorageRestriction" },
        "profileSizeRestriction": { "$ref": "#/definitions/profileSizeRestriction" },
        "profileEquivStorage": { "$ref": "#/definitions/profileEquivStorage" },
        "profileSizeInfo": { "$ref": "#/definitions/profileSizeInfo" },
        "profileSizeInfoRef": { "$ref": "#/definitions/profileSizeInfoRef" },
        "canCopy": { "type": "string", "enum": [ "yes", "no" ] },
        "canDelete": { "type": "string", "enum": [ "yes", "no" ] },
        "canOverlap": { "type": "string", "enum": [ "yes", "no" ] },
        "canReorder": { "type": "string", "enum": [ "yes", "no", "firstNo" ], "default": "yes" },
        "copyOf": { "$ref": "#/definitions/NMTOKEN" },
        "disp": { "type": "string" },
        "equiv": { "type": "string" },
        "dataRef": { "$ref": "#/definitions/NMTOKEN" },
        "subFlows": { "type": "string" },
        "subType": { "type": "string" },
        "type": { "$ref": "#/definitions/codeType" },
        "dir": { "$ref": "#/definitions/dir" },
        "isolated": { "type": "string", "enum": [ "yes", "no" ] }
      },
      "additionalProperties": false,
      "required": [ "id", "kind" ]
    },

    "element-sm": {
      "type": "object",
      "properties": {
        "kind": { "type": "string", "enum": [ "sm" ] },
        "id": { "$ref": "#/definitions/NMTOKEN" },
        "fs": { "$ref": "#/definitions/formatStyle" },
        "subFs": { "$ref": "#/definitions/subFormatStyle" },
        "profileStorageRestriction": { "$ref": "#/definitions/profileStorageRestriction" },
        "profileSizeRestriction": { "$ref": "#/definitions/profileSizeRestriction" },
        "allowedCharacters": { "type": "string" },
        "localeFilterList": { "type": "string", "default": "*" },
        "localeFilterType": { "type": "string", "default": "include" },
        "locQualityIssueComment": { "type": "string" },
        "locQualityIssueEnabled": { "type": "string", "enum": [ "yes", "no" ] },
        "locQualityIssueProfileRef": { "$ref": "#/definitions/IRI" }, 
        "locQualityIssuesRef": { "$ref": "#/definitions/IRI" },
        "locQualityIssueSeverity": { "type": "number", "minimum": 0, "maximum": 100 },
        "locQualityIssueType": { "$ref": "#/definitions/locQualityIssueType" },
        "locQualityRatingProfileRef": { "$ref": "#/definitions/IRI" },
        "locQualityRatingScore": { "type": "number", "minimum": 0, "maximum": 100 },
        "locQualityRatingScoreThreshold": { "type": "number", "minimum": 0, "maximum": 100 },
        "locQualityRatingVote": { "type": "integer" },
        "locQualityRatingVoteThreshold": { "type": "integer" },
        "termConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "mtConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "annotatorsRef": { "$ref": "#/definitions/annotatorsRef" },
        "org": { "type": "string" },
        "orgRef": { "$ref": "#/definitions/IRI" },
        "person": { "type": "string" },
        "personRef": { "$ref": "#/definitions/IRI" },
        "provenanceRecordsRef": { "$ref": "#/definitions/IRI" },
        "revOrg": { "type": "string" },
        "revOrgRef": { "$ref": "#/definitions/IRI" },
        "revPerson": { "type": "string" },
        "revPersonRef": { "$ref": "#/definitions/IRI" },
        "revTool": { "type": "string" },
        "revToolRef": { "$ref": "#/definitions/IRI" },
        "tool": { "type": "string" },
        "toolRef": { "$ref": "#/definitions/IRI" },
        "domains": { "$ref": "#/definitions/domains" },
        "taClassRef": { "$ref": "#/definitions/IRI" },
        "taConfidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "taSource": { "type": "string" },
        "taIdent": { "type": "string" },
        "taIdentRef": { "$ref": "#/definitions/IRI" },
        "type": { "$ref": "#/definitions/mrkType" },
        "translate": { "type": "string", "enum": [ "yes", "no" ] },
        "ref": { "$ref": "#/definitions/IRI" },
        "value": { "type": "string" }
      },
      "additionalProperties": true,
      "required": [ "id", "kind" ]
    },

    "dir": {
      "type": "string",
      "enum": [ "ltr", "rtl", "auto" ]
    },

    "type": {
      "type": "string",
      "pattern": "^.+:.+$"
    },

    "codeType": {
      "type": "string",
      "enum": [ "fmt", "ui", "quote", "link", "image", "its:generic", "other" ]
    },

    "mrkType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [ "generic", "comment", "term", "its-term-no" ],
          "default": "generic"
        },
        {
          "type": "string",
          "pattern": "^.+:.+$"
        }
      ]
    },

    "JSON-LD-context": {
      "description": "An embedded JSON-LD-context with prefix-name pairs to resolve colon-prefixed extensions",
      "type": "object",
      "patternProperties": { "^[-._A-Za-z0-9]+$": { "type": "string" } },
      "additionalProperties": false
    },

    "NMTOKEN": {
      "description": "XSD NMTOKEN type for XLIFF interoperability, the type of id properties",
      "type": "string",
      "pattern": "^[-._:A-Za-z0-9]+$"
    },

    "NMTOKENS": {
      "description": "List of XSD NMTOKEN separated by spaces for XLIFF interoperability",
      "type": "string",
      "pattern": "^([-._:A-Za-z0-9]+[ ]+)*[-._:A-Za-z0-9]+$"
    },

    "IRI": {
      "type": "string",
      "format": "uri"
    },

    "language": {
      "description": "A language code as described in IETF BCP 47",
      "type": "string"
    }

  }

}
