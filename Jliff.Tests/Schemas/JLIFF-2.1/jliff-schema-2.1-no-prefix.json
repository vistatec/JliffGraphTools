      },
      "additionalProperties": true
    },

    "changeTrackRevisionItemText": {
      "type": "object",
      "properties": {
        "property": { "type": "string" },
        "text": { "type": "string" }
      },
      "additionalProperties": true,
      "required": [ "property", "text" ]
    },

    "profiles": {
      "description": "The Size and Length Restriction (profiles) module provides a mechanism to annotate the XLIFF content with information on storage and general size restrictions",
      "type": "object",
      "properties": {
        "generalProfile": { "type": "string" },
        "storageProfile": { "type": "string" },
        "normalization": {
          "type": "object",
          "properties": {
            "general": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "storage": { "type": "string", "enum": [ "none", "nfc", "nfd" ] }
          }
        }
      },
      "additionalProperties": true
    },

    "profileData": {
      "type": "object",
      "properties": {
         "profile": { "type": "string" }
      },
      "additionalProperties": true,
      "required": [ "profile" ]
    },

    "profileStorageRestriction": {
      "type": "string"
    },

    "profileSizeRestriction": {
      "type": "string"
    },

    "profileEquivStorage": {
      "type": "string"
    },

    "profileSizeInfo": {
      "type": "string"
    },

    "profileSizeInfoRef": {
      "type": "string"
    },

    "validation": {
      "description": "The validation module defines a specific set of validation rules that can be applied to target text both globally and locally",
      "type": "array",
      "items": { "$ref": "#/definitions/validationRule" },
      "minItems": 1
    },

    "validationRule": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "isPresent": { "type": "string" },
            "occurs": { "type": "integer", "minimum": 1 },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "isNotPresent": { "type": "string" },
            "occurs": { "type": "integer", "minimum": 1 },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "occurs": { "type": "integer", "minimum": 1 },
            "startsWith": { "type": "string" },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        },
        {
          "properties": {
            "occurs": { "type": "integer", "minimum": 1 },
            "endsWith": { "type": "string" },
            "existsInSource": { "type": "string", "enum": [ "yes", "no" ] },
            "caseSensitive": { "type": "string", "enum": [ "yes", "no" ] },
            "normalization": { "type": "string", "enum": [ "none", "nfc", "nfd" ] },
            "disabled": { "type": "string", "enum": [ "yes", "no" ] }
          }
        }
      ],
      "additionalProperties": true
    },

    "provenanceRecords": {
      "description": "A standoff wrapper element to group any number of single Provenance Record elements related to the same span of source or target content",
      "type": "array",
      "items": { "$ref": "#/definitions/provenanceRecord" },
      "minItems": 1
    },

    "provenanceRecord": {
      "type": "object",
      "properties": {
        "org": { "type": "string" },
        "orgRef": { "$ref": "#/definitions/IRI" },
        "person": { "type": "string" },
        "personRef": { "$ref": "#/definitions/IRI" },
        "provenanceRecordsRef": { "$ref": "#/definitions/IRI" },
        "revOrg": { "type": "string" },
        "revOrgRef": { "$ref": "#/definitions/IRI" },
        "revPerson": { "type": "string" },
        "revPersonRef": { "$ref": "#/definitions/IRI" },
        "revTool": { "type": "string" },
        "revToolRef": { "$ref": "#/definitions/IRI" },
        "tool": { "type": "string" },
        "toolRef": { "$ref": "#/definitions/IRI" }
      },
      "additionalProperties": false
    },

    "locQualityIssues": {
      "description": "a standoff wrapper element to group any number of single issue elements related to the same span of source or target content",
      "type": "array",
      "items": { "$ref": "#/definitions/locQualityIssue" },
      "minItems": 1
    },

    "locQualityIssue": {
      "type": "object",
      "properties": {
