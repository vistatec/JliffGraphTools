        "translate": { "type": "string", "pattern": "^[^ |]+$" },
        "localization-note": { "type": "string", "pattern": "^[^ |]+$" },
        "terminology": { "type": "string", "pattern": "^[^ |]+$" },
        "directionality": { "type": "string", "pattern": "^[^ |]+$" },
        "language-information": { "type": "string", "pattern": "^[^ |]+$" },
        "elements-within-text": { "type": "string", "pattern": "^[^ |]+$" },
        "domain": { "type": "string", "pattern": "^[^ |]+$" },
        "text-analysis": { "type": "string", "pattern": "^[^ |]+$" },
        "locale-filter": { "type": "string", "pattern": "^[^ |]+$" },
        "provenance": { "type": "string", "pattern": "^[^ |]+$" },
        "external-resource": { "type": "string", "pattern": "^[^ |]+$" },
        "target-pointer": { "type": "string", "pattern": "^[^ |]+$" },
        "id-value": { "type": "string", "pattern": "^[^ |]+$" },
        "preserve-space": { "type": "string", "pattern": "^[^ |]+$" },
        "localization-quality-issue": { "type": "string", "pattern": "^[^ |]+$" },
        "localization-quality-rating": { "type": "string", "pattern": "^[^ |]+$" },
        "mt-confidence": { "type": "string", "pattern": "^[^ |]+$" },
